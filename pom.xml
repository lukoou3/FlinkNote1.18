            <scope>${libs.online.scope}</scope>
            <!--<exclusions>
                <exclusion>
                    <groupId>org.scalactic</groupId>
                    <artifactId>scalactic_2.11</artifactId>
                </exclusion>
            </exclusions>-->
        </dependency>

        <!-- This dependency is provided, because it should not be packaged into the JAR file. -->
